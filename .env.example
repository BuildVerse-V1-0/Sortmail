# SortMail Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# App
# =============================================================================
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# Server
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sortmail

# =============================================================================
# Redis (optional for MVP)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# OAuth - Google
# Get these from: https://console.cloud.google.com/apis/credentials
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# =============================================================================
# OAuth - Microsoft
# Get these from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# =============================================================================
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/outlook/callback

# =============================================================================
# JWT
# Generate a secure secret: openssl rand -hex 32
# =============================================================================
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# =============================================================================
# LLM
# =============================================================================
LLM_PROVIDER=gemini  # or "openai"

# Google Gemini - Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Storage
# =============================================================================
CHROMA_PERSIST_DIR=./data/chroma
STORAGE_PATH=./data/attachments
MAX_ATTACHMENT_SIZE_MB=25
